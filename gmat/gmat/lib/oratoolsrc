rules = [ORALIBDIR|/usr/local/share/gmat/lib]/dbtohtml.tag [ORALIBDIR|/usr/local/share/gmat/lib]/dbtohtml.ent

[ dbtoltx ]
rules = [ORALIBDIR|/usr/local/share/gmat/lib]/dbtoltx.tag [ORALIBDIR|/usr/local/share/gmat/lib]/dbtoltx.ent

[ dbtortf ]
rules = [ORALIBDIR|/usr/local/share/gmat/lib]/dbtortf.tag [ORALIBDIR|/usr/local/share/gmat/lib]/dbtortf.ent

[ dbtotexi ]
rules = [ORALIBDIR|/usr/local/share/gmat/lib]/dbtotexi.tag [ORALIBDIR|/usr/local/share/gmat/lib]/dbtotexi.ent 

[ memototxt ]
