# Global options

# directories
#
bindir    = /usr/local/share/gmat/bin
workdir   = /usr/local/bin
libdir    = /usr/local/share/gmat/lib
seddir    = [SEDDIR|/usr/local/share/gmat/sed]

debugdir  = ./debug
scriptdir = ./scripts
macrodir  = ./macros

# programs
#
gsoelim   = /usr/bin/soelim
sgmls     = /usr/local/bin/nsgmls
crlf      = /usr/local/bin/crlf -q
zcat      = /usr/local/bin/gzcat
troff     = /usr/bin/troff

# files
#
bookfiles = BOOKFILES
printer   = [PRINTER|lp]
bookids   = BOOKIDS

temp_base = ,$WHOAMI.$basefile
ps_base   = $basefile-$WHOAMI
sgml_base = drv-$WHOAMI
ext_base  = drv-$WHOAMI

# SGML stuff
#
sgmls_opts = -dgru -wno-duplicate
sdecl      = /usr/local/share/gmat/sgml/sdecl
sgml_path  = ./%S:~/sgml/%S:/usr/local/share/gmat/sgml/%S:/usr/local/share/gmat/sgml/entities/%S
sgml_catalog_files = ./CATALOG:/usr/local/share/gmat/sgml/CATALOG

# Message flags:
# Verbose  Quiet
# -------  -----     ------------------------------
# True     True   =  Meaningless (indeterminate)
# True     False  =  All messages
# False    True   =  No messages
# False    False  =  Only warning messages
# -------  -----     ------------------------------
verbose   = false
quiet     = false

[ gmat.troff ]

action    = view

tbl       = tbl
pic       = pic
eqn       = eqn

tbl_opts  = -
pic_opts  = -
eqn_opts  = -

